module Playground.Net.PlayerInteraction;

import Playground.Net.Base;
import Playground.Net.CommonTypes;

protocol PlayerInteraction;

enum Color : byte
{
    Red = 1,
    Green = 2,
    Blue = 3,
}

data PlayerUpdateBody
{
	Vector3d position;
	float orientation;
}

message PlayerUpdateDirection
{
	Head head;
	PlayerUpdateBody body;
	Vector2d direction;
}

message PlayerUpdateVelocity
{
	Head head;
	PlayerUpdateBody body;
	float velocity;
}

message PlayerJumpStart
{
	Head head;
	PlayerUpdateBody body;
}

message PlayerJumpEnd
{
	Head head;
	PlayerUpdateBody body;
}
